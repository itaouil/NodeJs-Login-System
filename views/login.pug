extends layout

block content
  h2.page-header Login
  p Please login using the form below
  form(method="post", action="/users/login")
    .form-group
      label Username
      input.form-control(name='username', type='text', palceholder='Enter username')
    .form-group
      label Password
      input.form-control(name='password', type='password', palceholder='Enter password')

    input.btn.btn-primary(name='submit', type='submit', value='Login')
